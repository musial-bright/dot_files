# Command line (Git, Ruby)
git_branch () {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'
}
parse_ruby_version () {
  rbenv version | cut -d " " -f1
}
set_prompt () {
  # https://upload.wikimedia.org/wikipedia/commons/1/15/Xterm_256color_chart.svg
  # 009 RED
  # 234 text color
  # 252 LIGHT_GRAY

  setopt prompt_subst
  PROMPT=$'%n@%m:%d %F{240}$(git_branch) %F{240}r$(parse_ruby_version) %{$reset_color%}\nâ‚¬ '
}
set_prompt
