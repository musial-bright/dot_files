# Command line (Git, Ruby)
git_branch () {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'
}

parse_ruby_version () {
  rbenv version | cut -d " " -f1
}

parse_node_version () {
  node --version
}

set_prompt () {
  # https://upload.wikimedia.org/wikipedia/commons/1/15/Xterm_256color_chart.svg

  setopt prompt_subst
  PROMPT=$'%n:%d %F{136}[$(git_branch)] %F{244}r:$(parse_ruby_version) n:$(parse_node_version)\nâ‚¬ '
}
set_prompt
